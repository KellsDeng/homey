<%= simple_form_for [:backend,guest] do |f| %>
<div class="panel panel-primary">
  <div class="panel-heading"><h4>个人信息</h4>
  </div>
  <div class="panel-body">
    <div class="col-md-3">
      <%= f.input :name,:label=>"名称" %>
    </div>
    <div class="col-md-3 country-select">
      <%= f.label :country, "国籍" %>
      <%= f.country_select :country_code ,priority_countries:["US","IT","RU","MY","GB"],locale:'en'%>
    </div>
    <div class="col-md-3">
      <%= f.input :job, label:"工作" %>
    </div>
    <div class="col-md-3">
      <%= f.input :company ,label:"公司信息" %>
    </div>
    <div class="col-md-3">
      <%= f.input :email ,label:"电子邮件",as: :email %>
    </div>
    <div class="col-md-3">
      <%= f.input :wechat ,label:"微信" %>
    </div>
    <div class="col-md-3">
      <%= f.input :phone ,label:"电话",as: :tel %>
    </div>
    <div class="col-md-3">
      <%= f.input :status ,collection:["求租","在租","退租"],label:"租赁状态" %>
    </div>
    <div class="col-md-3">
      <%= f.input :referrer ,label:"推荐人" %>
    </div>

    <div class="col-md-3">
      <%= f.input :approach ,collection:["官网","客户推荐","relocation suppliers","高校/外企人事部","广告","其它"],label:"获取途径" %>
    </div>
  </div>
</div>

<div class="panel panel-primary">
  <div class="panel-heading">
    <h4>房屋需求</h4>
  </div>
  <div class="panel-body">
    <div class="col-md-12">
      <!-- <%= f.input :house_options ,collection:[["个人出租住宅",0],["品牌公寓",1],["别墅",2],["商铺",3],["车库",4]],label:"房屋类型",as: :check_boxes %> -->
      <%= f.collection_check_boxes :option_ids,Option.all,:id,:id %>
    </div>
    <div class="col-md-3">
      <%= f.input :house_district ,label:"区域" %>
    </div>
    <div class="col-md-3">
      <%= f.input :house_type ,label:"户型" %>
    </div>
    <div class="col-md-3">
      <%= f.input :liked_estate ,label:"中意小区" %>
    </div>
    <div class="col-md-3">
      <!-- <%= f.label :landscape,"景观" %>
      <div class="form-control">
          <%= f.select :landscape ,{'否'=>0,'是'=>1} %>
      </div> -->
      <%= f.input :landscape,collection:["湖景","海景"],label:'景观' %>
    </div>
    <div class="col-md-3">
      <%= f.input :house_floor ,collection:["高","中","低","无要求"],label:"楼层" %>
    </div>
    <div class="col-md-3">
      <%= f.input :house_furnished ,collection:["有","无"] ,label:"室内家具" %>
    </div>

    <div class="col-md-3">
      <%= f.input :house_parking ,collection:["一个","二个","三个","无"], label:"停车位" %>
    </div>
    <div class="col-md-3">
      <%= f.input :house_XIS ,collection:["有","无"],label:"XIS校车停靠点" %>
    </div>
  </div>
</div>

<div class="panel panel-primary">
  <div class="panel-heading">
    <h4>个人需求</h4>
  </div>
  <div class="panel-body">
    <div class="col-md-3">
      <%= f.input :check_in_date,label:'计划入住' %>
    </div>
    <div class="col-md-3">
      <%= f.input :duration ,label:"计划租期" %>
    </div>
    <div class="col-md-3">
      <%= f.input :budget ,label:"最高预算" %>
    </div>
    <div class="col-md-3">
      <%= f.input :has_pet ,collection:["有","无"],label:"宠物" %>
    </div>
    <div class="col-md-3">
      <%= f.input :want_buy ,collection:["有","无"],label:"购房意向" %>
    </div>

    <div class="col-md-12">
      <%= f.input :other_requests ,label:"其它需求" ,as: :text%>
    </div>
  </div>
</div>




<h3 class="col-md-12">裙带客源</h3>
<%= f.fields_for :refer_guests do |ff| %>
  <fieldset style="border-left: 5px solid #bbb;margin-bottom:10px;padding:10px;">
    <div class="col-md-3">
      <%= ff.input :name %>
    </div>
    <div class="col-md-3">
      <%= ff.input :contact %>
    </div>
  </fieldset>
<% end %>
<div class="col-md-12">
<%= f.submit "确定",class:'btn btn-success' %>
<%= link_to("返回",:back,class:"btn btn-info") %>
</div>

<% end %>
