<div class="devise-bg">
  <h2 class="greeting">Log in</h2>
  <div class="col-lg-4 col-md-4 col-lg-offset-4 col-md-offset-4 devise-container">
    <div class="devise-title">
      <%= t("log_in",:scope=>"devise") %>
    </div>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true %>
        <%= f.input :password, required: true %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, t("log_in",:scope=>"devise"),class:"btn btn-primary" %>
      </div>

    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>
